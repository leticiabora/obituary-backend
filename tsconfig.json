{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models": ["./src/models/index.ts"],
      "@models/*": ["src/models/*"],
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true
  }
}
