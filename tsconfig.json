{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true
  }
}
